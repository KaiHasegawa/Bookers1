<h1 class="header">Books</h1>

<table>
	<thead>
		<tr>
			<th>Title</th>
			<th>Body</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
    <% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
			<td><%= link_to "Show",book_path(book) %>
				<%= link_to "Edit",edit_book_path(book) %>
				<%= link_to "Destroy",book_path(book),method: :delete %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>

<h1 class="new">New Book</h1>

<%= form_for(@book) do |f| %>

  <h4 class="text">Title</h4>
  <%= f.text_field :title %>

  <h4 class="text">Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'create box' %>

<% end %>